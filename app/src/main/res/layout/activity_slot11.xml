<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".Slot11">

    <!-- Header Image -->
    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/edisa"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp" />


    <!-- Navigate to Product Activity Button -->
    <Button
        android:id="@+id/btnNavigateToProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Activity"
        android:backgroundTint="#6200EE"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:elevation="4dp"
        android:layout_marginBottom="16dp" />

    <!-- Navigate to Customer Activity Button -->
    <Button
        android:id="@+id/btnNavigateToCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Activity"
        android:backgroundTint="#6200EE"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:elevation="4dp" />
</LinearLayout>
