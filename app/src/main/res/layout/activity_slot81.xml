<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".slot8.Slot81">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:text="Email Setup"
            android:layout_column="1"
            android:layout_row="0"
            android:textSize="30sp"
            android:textColor="#123456"
            android:id="@+id/slot81TVEmailSetup"/>
        <TextView android:text="You can config email in just a few steps: "
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"/>
        <TextView android:text="Email"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="20sp"/>
        <TextView android:text="Password"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="20sp"/>
        <EditText android:hint="Input email"
            android:layout_row="2"
            android:layout_column="1" />
        <EditText
            android:inputType="textPassword"
            android:hint="Input password"
            android:layout_row="3"
            android:layout_column="1" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>